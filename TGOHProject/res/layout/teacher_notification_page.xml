<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/teacherbackground">

    <Button
        android:id="@+id/btnlogout"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttons"
        android:text="@string/btnLogOut" />
    
    <Button
        android:id="@+id/btnaccept"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttons"
        android:text="@string/btnAccept" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/btnlogout"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btndeny"
        android:background="@drawable/buttons"
        android:text="@string/back" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnaccept"
        android:text="@string/teachernotaccept"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btndeny"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnaccept"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/buttons"
        android:text="@string/btnDeny" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btndeny"
        android:layout_alignBottom="@+id/btndeny"
        android:layout_toRightOf="@+id/btndeny"
        android:text="@string/teachernotdeny"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btndeny"
        android:text="@string/teachernotopen"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView3" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
