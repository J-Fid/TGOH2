<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/teacherbackground">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblCourseHomePage"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/logoutbtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttons"
        android:text="@string/btnLogOut" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/backbtn"
        android:background="@drawable/buttons"
        android:text="@string/btnDeleteCourse" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/logoutbtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/buttons"
        android:text="@string/back" />

    <Button
        android:id="@+id/btnNotify"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/logoutbtn"
        android:background="@drawable/buttons"
        android:text="@string/btnNotifications" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnNotify"
        android:text="@string/enterstring"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/button1"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button1"
        android:textColor="#000000"
        android:text="@string/removeannouncelbl" />

    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/backbtn"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3" >

    </ListView>

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignLeft="@+id/logoutbtn"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/editText1"
        android:background="@drawable/buttons"
        android:text="@string/AddAnnouncementslbl" />

</RelativeLayout>